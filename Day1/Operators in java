package day1;

public class Operator {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		System.out.println( "Arithmatic operator"); 
		int a= 10 , b= 20;
		 System.out.println(a+b);
		 System.out.println(a-b);
		 System.out.println(a*b);
		 System.out.println(a%b);
		
		 System.out.println( "Relational operator"); 
		 
		 System.out.println(a>b);
		 System.out.println(a<b);
		 System.out.println(a>=b);
		 System.out.println(a<=b);
		 System.out.println(a==b);
		 System.out.println(a!=b);
		 
		 System.out.println( "Logical operator"); 
		 
		 boolean X = true;
	        boolean Y = false;

	        // AND operator
	        System.out.println("a AND b: " + (X && Y)); // This will print false 

	        // OR operator
	        System.out.println("a OR b: " + (X || Y));  // This will print true 

	        // NOT operator
	        System.out.println("NOT a: " + (!X));       // This will print falsE
	        System.out.println("NOT b: " + (!Y));
		 
	        System.out.println( "INCREMENT/DECREMENT operator");
	        int p=100;
	        
	        p++;     //101
	        System.out.println(p); 
	        p--;
	        System.out.println(p);
	        
	        
	        System.out.println( "TERNARY/CONDITIONAL operator");
	        int q = 10;

	        // Ternary operator
	        String result = (q % 2 == 0) ? "Even" : "Odd";

	        System.out.println("The number " + q + " is " + result);
	}

}
