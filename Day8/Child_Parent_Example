package day8;


//Parent class
class Parent {
 void displayParent() {
     System.out.println("This is parent class");
 }
}

//Child class inheriting Parent
class Child extends Parent {
 void displayChild() {
     System.out.println("This is child class");
 }
}

//Main class to execute the program
public class ParentChildExample {
 public static void main(String[] args) {
     // Object of Parent class
     Parent parentObj = new Parent();
     parentObj.displayParent();  // Method of Parent class

     // Object of Child class
     Child childObj = new Child();
     childObj.displayChild();    // Method of Child class
     childObj.displayParent();   // Method of Parent class by Child object
 }
}

